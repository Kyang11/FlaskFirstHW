{% extends 'base.html.j2' %}

{% block header %}
  <h1>{% block title %}Pokemon{% endblock %}</h1>
{% endblock %}

{%block content %}

<h1>Pokemon</h1>
<form action="/pokemon" method="POST">
  <div class="mb-3">
    <label for="Year" class="form-label">Name</label>
    <input type="text" name="name" class="form-control" id="year">
  </div>
  <div style="color:red"><small>{{error}}</small></div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

  <table class="table table-striped table-hover table-dark">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Ability</th>
        <th scope="col">Base experience</th>
        <th scope="col">Sprite Url</th>
        <th scope="col">Attack Stat</th>
        <th scope="col">Hp Power</th>
        <th scope="col">Defense</th>
      </tr>
    </thead>
    <tbody>
    {% for racer in racers %}
      <tr>
        <th scope="row">{{racer['p_name']}}</th>
        <td>{{racer.p_name}}</td>
        <td>{{racer.ability_name}}</td>
        <td>{{racer.base_experience_name}}</td>
        <td>{{racer.sprite_url_name}}</td>
        <td>{{racer.attack_stat}}</td>
        <td>{{racer.ph_power}}</td>
        <td>{{racer['defense']}}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  </table>


{%endblock %}